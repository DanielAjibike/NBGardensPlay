# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Route to show the homepage
GET     /                           controllers.HomeController.home

# Route to show all the products
GET     /browse                     controllers.ProductController.allProducts

# Count stuff
GET     /count                      controllers.CountController.count

# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# Route to show the registration page
GET     /registration               controllers.RegistrationController.registration

POST    /registration               controllers.RegistrationController.saveCustomer

# Route to find a customer for something
#GET     /findCustomer               controllers.LoginController.findCustomer(u:String)

# Route to show the login page
#GET     /login                      controllers.LoginController.login(u:String, p:String)